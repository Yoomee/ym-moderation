.row-fluid
  .span12
    %h1=title('Moderation')
.row-fluid
  -if FlaggingCategory.all.present?
    .span4
      %ul.unstyled
        -FlaggingCategory.all.each do |category|
          %li
            =link_to_self(category, :class => 'pull-left')
            %span.badge.pull-left=category.flags.count
          
    .span8
      =render('table')
  -else
    .span12
      =render('table')
    
.row-fluid
  .span12
    =options_panel do
      =link_to('Edit categories', flagging_categories_path)
      =flag_link(Post.last)